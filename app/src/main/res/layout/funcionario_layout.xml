<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_func_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_function_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_func_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:clickable="false"
        android:text="@string/btn_function_empresa" />

    <Button
        android:id="@+id/btn_function_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_function_empresa"
        android:layout_below="@+id/btn_function_empresa"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:text="@string/btn_function_usuario" />

    <Button
        android:id="@+id/btn_function_acesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_function_usuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_weight="1"
        android:text="@string/btn_function_acesso" />

    <Button
        android:id="@+id/btn_function_arcondicionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_function_acesso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="@string/btn_function_arcondicionado" />
</RelativeLayout>
